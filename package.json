{
    "name": "asset-tracker",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development FREEMODE=true concurrently \"npm:dev:server\" \"npm:dev:client\"",
        "dev:server": "nodemon server/index.js",
        "dev:client": "npm --prefix client run dev",
        "build": "npm run build:theme && npm --prefix client run build",
        "build:theme": "node scripts/build-theme.mjs",
        "start": "node server/index.js",
        "install:client": "npm --prefix client install"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "form-data": "^4.0.0",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^5.0.7",
        "sqlite": "^4.1.2",
        "sqlite3": "^5.1.4",
        "stripe": "^16.7.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "nodemon": "^3.1.7"
    }
}